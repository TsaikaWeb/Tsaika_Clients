
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>
        <i class="" aria-hidden="true"></i> List of Names
    </h1>

</div>

<div>
    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
    <table class="table">
        <thead class="thead-dark">
            <tr>
                @Html.ActionLink("Sort by Name", "Index", "Home", new { sortClient = ViewBag.NameSortParm })
                <th scope="col">Name</th>
                <th scope="col">Name in a English language</th>
                <th scope="col">Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in ViewBag.client)
            {


                <tr>
                    <td>@x.Name</td>
                    <td>@x.Eng_Name</td>
                    <td>@x.Gender</td>
                </tr>

            }
        </tbody>
    </table>
</div>


        
    
<p>
    
    @if (Request.IsAuthenticated)
    {


        if (ViewBag.roleid == 1)
        {
            @Html.ActionLink("Create New", "Create", "Home")
        }


    }
    else
    {
        <a href="~/Account/Login">Login as admin for add new</a>
    }

</p>